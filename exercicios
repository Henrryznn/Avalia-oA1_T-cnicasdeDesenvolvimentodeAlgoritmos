        "\"Estruturas Condicionais\"\n",
        "\n",
        "# Sistema de verificação de idade para entrada em eventos\n",
        "\n",
        "# Entrada de dados\n",
        "idade = int(input(\"Digite sua idade: \"))\n",
        "\n",
        "# Verificação da idade usando if, elif e else\n",
        "if idade < 0:\n",
        "    print(\"Idade inválida!\")\n",
        "elif idade < 12:\n",
        "    print(\"Entrada permitida somente com responsável.\")\n",
        "elif idade < 18:\n",
        "    print(\"Entrada permitida apenas para eventos classificados como 'menores acompanhados'.\")\n",
        "elif idade <= 120:\n",
        "    print(\"Entrada liberada! Bem-vindo ao evento.\")\n",
        "else:\n",
        "    print(\"Idade fora do intervalo válido.\")"
